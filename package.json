{
  "name": "nodejs-docker-web-app",
  "version": "1.0.0",
  "description": "Node.js app on docker container",
  "main": "main.js",
  "scripts": {
    "compress": "npx tsc && uglifyjs ./build/app.js -o ./build/app.min.js --compress --mangle",
    "build": "npm run compress && --watch & nodemon ./build/app.min.js",
    "starts": "npx tsc && nodemon server.js",
    "builds": "npx tsc",
    "start": "node main.js",
    "preview": "concurrently \"npx tsc --watch\" \"nodemon preview.js\"",
    "previews": "concurrently \"npx tsc --watch\" \"nodemon dist/preview.js\"",
    "dev": "npx tsc && nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Dipesh Malvia",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.13.0",
    "mongoose": "^8.10.0",
    "serverless-http": "^4.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^22.18.6",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^9.2.1",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
