{
  "openapi": "3.0.0",
  "info": {
    "title": "Node API Documentation",
    "version": "1.0.0",
    "description": "Sample Node.js Swagger API"
  },
  "servers": [
    {
      "url": "http://localhost:9000"
    }
  ],
  "paths": {
    "/getLists": {
      "post": {
        "summary": "Get paginated list",
        "description": "Fetch data using page and limit",
        "tags": ["Post Lists"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "page": {
                    "type": "integer",
                    "example": 1
                  },
                  "limit": {
                    "type": "integer",
                    "example": 8
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response"
          }
        }
      }
    },

    "/getList": {
      "get": {
        "summary": "Get paginated list of data from the database",
        "description": "Fetches a paginated list of items from the configured database collection.",
        "tags": ["Lists"],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            },
            "description": "Page number for pagination"
          },
          {
            "in": "query",
            "name": "limit",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            },
            "description": "Number of items per page"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully fetched list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "page": { "type": "integer" },
                    "limit": { "type": "integer" },
                    "total": { "type": "integer" },
                    "data": {
                      "type": "array",
                      "items": { "type": "object" }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Missing database configuration"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  }
}
